<form {{action 'save' on='submit'}}>
  Board Title{{input placeholder='Board Title'
          value=board.name
          required='true'}}<br>
  Length (inches){{input placeholder='Board Length (inches)'
          value=board.length
          type='number' step='0.001'
          required='true'}}<br>
  Width (inches){{input placeholder='Board Width (inches)'
          value=board.width
          type='number' step='0.001'
          required='true'}}
          <hr>
  <button type='submit' class='btn btn-sm'>Save</button>
  <button {{action 'cancel'}} class='btn btn-sm btn-danger'>Cancel</button>
</form>
