<form {{action 'save' on='submit'}}>
  Pedal Title{{input placeholder='Pedal Title'
          value=pedal.name
          required='true'}}
          <br>
  Length (inches){{input placeholder='Pedal Length (inches)'
          value=pedal.length
          type='number' step='0.001'
          required='true'}}
          <br>
  Width (inches){{input placeholder='Pedal Width (inches)'
          value=pedal.width
          type='number' step='0.001'
          required='true'}}
          <br>
  Link to Image{{input placeholder='http://link-to-image-of-pedal.com'
          value=pedal.link
          type='string'}}
          <br>
  Official Product Page{{input placeholder='URL to company site'
          value=pedal.info
          type='string'}}
          <hr>
  <button type='submit' class='btn btn-sm'>Save</button>
  <button {{action 'cancel'}} class='btn btn-sm btn-danger'>Cancel</button>
</form>
